{
  "name": "dbkeep",
  "version": "0.1.0",
  "description": "Open-source visual database schema editor. Design PostgreSQL, MySQL, and SQLite schemas with an intuitive drag-and-drop interface.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@guolao/vue-monaco-editor": "^1.6.0",
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxt/fonts": "^0.13.0",
    "@nuxt/scripts": "0.13.2",
    "@nuxt/test-utils": "3.23.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@unhead/vue": "^2.0.19",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.48.1",
    "@vue-flow/node-resizer": "^1.5.0",
    "@vueuse/nuxt": "^14.1.0",
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "node-sql-parser": "^5.3.13",
    "nodemailer": "^7.0.12",
    "nuxt": "^4.2.2",
    "pg": "^8.16.3",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@playwright/test": "^1.58.0",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "playwright-core": "^1.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  },
  "packageManager": "pnpm@10.26.1"
}
