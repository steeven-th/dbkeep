# Database PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dbkeep

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# Mode de fonctionnement de l'application
# ===========================================

# Mode Invité (Guest Mode)
# Si true, permet d'utiliser l'app sans authentification
# Les projets sont attribués à un utilisateur "guest" système
# Idéal pour l'auto-hébergement personnel
NUXT_PUBLIC_GUEST_MODE=false

# Inscription des utilisateurs
# Si false, désactive l'inscription (page et API)
# Utile pour une instance personnelle
NUXT_PUBLIC_ENABLE_REGISTER=true

# ===========================================
# Configuration Email (SMTP)
# ===========================================
# Requis pour : réinitialisation de mot de passe, vérification email
# Voir la documentation : docs/email-configuration.md

# Serveur SMTP
# Exemples :
#   - Mailpit (dev local) : localhost:1025
#   - Brevo : smtp-relay.brevo.com:587
#   - Gmail : smtp.gmail.com:587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Adresse d'expéditeur
EMAIL_FROM="DBKeep <noreply@dbkeep.io>"

# URL publique de l'application (pour les liens dans les emails)
NUXT_PUBLIC_APP_URL=http://localhost:3000

# Vérification d'email obligatoire à l'inscription
# Si true, un email de vérification est envoyé à l'inscription
REQUIRE_EMAIL_VERIFICATION=false
